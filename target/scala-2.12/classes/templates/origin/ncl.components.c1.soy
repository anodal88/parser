    [
    image: [src: string, alt: string],
    text: string,
    body: html
    ]
    >}
    {@param disclaimer: string}

    {@param offersTitle: string}
    {@param offersList: list<[
    image: [src: string, alt: string],
    text: string,
    body: html
    ]> }
